<!DOCTYPE html>
<html>
<head>
	<title>namespace - fermer</title>
	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
	<header class="navbar-brand-center" style="background-color: #FFAD90;">
		<div class="navbar-nav ml-auto mr-auto">
			<% if fermer_signed_in? %>
			<nav>
				<ul class="nav-list">
					<li><h2 class="navbar-brand navbar-right">WAGURI</h2></li>
					<div class= "nav-list-item logo"></div>
					<li class="nav-list-item"><%= link_to '商品一覧', fermers_products_path, class: "nav-link disabled" %></li>
					<li class="nav-list-item"><%= link_to '会員一覧', fermers_consumers_path, class: "nav-link disabled" %></li>
					<li class="nav-list-item"><%= link_to '注文履歴', fermers_orders_path, class: "nav-link disabled" %></li>
					<li class="nav-list-item"><%= link_to 'ログアウト', destroy_fermer_session_path,method: :delete, class: "nav-link disabled" %></li>
				</ul>
			</nav>
			<% else %>
			<nav>
				<ul>
					<h2 class="navbar-brand navbar-right　text-right">WAGURI</h2>
					　<div class="nav-list-item" style="margin-right: 700px;"></div>
					<li class="nav-list-item"><%= link_to '商品一覧', fermers_products_path, class: "nav-link disabled" %></li>

					<li class="nav-list-item"><%= link_to '新規登録', new_fermer_registration_path, class: "nav-link disabled" %></li>

					<li class="nav-list-item"><%= link_to 'ログイン', new_fermer_session_path, class: "nav-link disabled" %></li>
				</ul>
			</nav>
			<% end %>
		</div>
	</header>
	<% content_for :content do %>
	<%= yield %>
	<% end %>
	<%= render template: "layouts/application" %>
</body>
</html>