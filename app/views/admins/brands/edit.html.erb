<div class="row" style= "width: 80%; margin: 20px auto;">
	<div class="form-horizontal">
		<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">カテゴリー編集画面</h4>
	</div>
</div>
<div class="container">
	<div>
		<%= form_for(@brand,url:admins_brand_path, local: true) do |f| %>
		<%= f.label :カテゴリー %>
		<%= f.collection_select :category_id, Category.where(category_status: 'draft').order("name"), :id, :name, :class => "string" %>
		<%= f.label :ブランド %>
		<%= f.text_field :name%>
		<label>
			<%= f.radio_button :brand_status, :draft %>
			<%= f.label :brand_status, "有効" %>
		</label>
		<label>
			<%= f.radio_button :brand_status, :published %>
			<%= f.label :brand_status, "無効" %>
		</label>
		<%= f.submit "変更を保存する", class:"btn-outline-primary btn-sm"%>
		<% end %>
		<%= link_to "⇦戻る",admins_brands_path %>
	</div>
</div>
