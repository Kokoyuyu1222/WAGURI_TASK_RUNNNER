<div class="container">
  <div class="row">
    <div class="offset-sm-3 col-sm-6"style="margin-left: 200px;">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <label >姓</label>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <label >名</label>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
        <div class="field">
          <label >セイ</label>
          <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
          <label >メイ</label>
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
        </div>

        <div class="field">
          <label >農園名</label>
          <%= f.text_field :garden, autofocus: true, autocomplete: "garden" %>
        </div>
        <div class="field">
          <label >電話番号</label>
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
        </div>

        <div class="field">
          <label >ホームページ</label>
          <%= f.text_field :home_page, autofocus: true, autocomplete: "home_page" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field" >
           <%= f.label :postcode %><br />
           <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode",id:"postcode" %>   </div>     
        <div class="field" >
             <%= f.label :prefecture_code %><br />
             <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
        </div>
        <div class="field" >
             <%= f.label :address_city %><br />
             <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city" ,id:"city"%>   
        </div>
        <div class="field" >
             <%= f.label :address_street %><br />
             <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street" ,id:"street"%>   
        </div>
        <div class="field">
             <%= f.label :address_building %><br />
             <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", id:"building" %>   
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      <%= render "fermers/shared/links" %>
    </div>
  </div>
</div>
