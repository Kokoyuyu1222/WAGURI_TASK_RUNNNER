<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h1>ブログ記事編集</h1>
			<%= form_for(@column,url:fermers_column_path) do |f| %>
				<% if @column.errors.any? %>

					<h3><%= @column.errors.count %>error occurrence</h3>
					<ul>
						<% @column.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
				<div class="form-group">
					<label>
						<%= f.label :タイトル %>
						<%= f.text_field :title, class:"form-control", id:"InputName", autocomplete: "title" %>
					</label>
				</div>
				<div class="form-group">
					<label>
						<%= f.label :本文 %>
						<%= f.text_area :body, class:"form-control", id:"InputIntroduction", autocomplete: "introduction", rows: 10 %>
					</label>
				</div>
				<div class="form-group">
					<label>
						<%= f.label :画像選択 %>
						<%= f.attachment_field :column_images_images, multiple: true %>
					</label>
				</div>
					<%= f.submit class: "btn btn-info btn-lg btn-block"%>
			<% end %>
		</div>
	</div>
</div>