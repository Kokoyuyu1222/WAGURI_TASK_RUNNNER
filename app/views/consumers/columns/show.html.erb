<div class="container">
	<div class="row">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@column.fermer) do %>
					<%= attachment_image_tag(@column.fermer, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @column.fermer.name %>
					<% end %>
				</td>
				<td><%= link_to @column.title, fermers_column_path %></td>
				<td><%= @column.body %></td>
				<td>
						<%= render 'consumers/column_favorites/favorite_form' ,column: @column, favorite: @favorite %>
				</td>
			</tr>
		</table>
		<p><%= @column.column_comments.count %>件コメント</p>
			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th>comment</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
						<tr id="comments_area">
							<%= render partial: 'consumers/column_comments/index', locals: { comments: @comments } %>
						</tr>
				</tbody>
				</table>
					<tr>
						<% if consumer_signed_in? %>
						<%= render partial: 'consumers/column_comments/form', locals: { comment: @comment, column: @column } %>
						<% end %>
					</tr>
	</div>
</div>