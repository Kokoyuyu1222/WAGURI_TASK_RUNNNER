<% if consumer_signed_in? %>
	<% if column.favorited_by?(current_consumer) %>

	    <%= link_to 'いいね外す',consumers_column_column_favorites_path(column, redirect_id: 0), method: :delete,remote: true, class: "column_#{column.id}" %><%= column.column_favorites.count %>
	      <i class="fas fa-heart" style="color: red;"></i>
	<% else %>
	    <%= link_to 'いいねする',consumers_column_column_favorites_path(column, redirect_id: 0), method: :post,remote: true, class: "column_#{column.id}" %><%= column.column_favorites.count %>
	      <i class="far fa-heart"></i>

	<% end %>
<% end %>
