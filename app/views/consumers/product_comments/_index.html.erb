<% comments.each do |comment| %>
    <div class="row comments">
      <div class="col-md-2 comments-consumer">
        <td class="posts-title"><%= link_to "#{comment.consumer.name}さん", consumers_consumer_path(comment.consumer.id) %></td>
        <td class="posts-prof"><%= comment.consumer.gender_i18n %> <%= comment.consumer.age_i18n %></td>
      </div>
      <div class="col-md-6 mb-3">
        <div class=" comments-consumer">
          <td><%= l comment.created_at, format: :short %></td>
          <td class="mb-3">評価：<%= comment.rate %>点 | <%= comment.title %></td>

          <!--星評価-->
         <td id="star-rate-<%= comment.id %>"></td>
          <script>
          $('#star-rate-<%= comment.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= comment.rate %>,
          });
          </script>
        <!--/星評価-->
         <td><%= comment.comment %></td>
        </div>
      </div>
      <div class="col-md-4">
        <%= link_to consumers_product_path(comment.product) do %>
          <div class="comments-product">
            <td><%=  comment.product.name %></td>
          </div>
        <%end %>
      </div>
      <td class="col-md-12 edit-button">
        <% if current_consumer == comment.consumer %>
          <%= link_to '口コミを削除',  consumers_product_product_comment_path(product_id:@product, id: comment.id), method: :delete, class:'btn btn-default' %>
        <% end %>
      </td>
    </div>
  <% end %>
